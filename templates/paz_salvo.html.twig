{% extends 'easy_admin/layout.html.twig' %}

{% form_theme form 'form/fields.html.twig' %}

{% block page_title %}Generar Paz y Salvo{% endblock %}
{% block content_title %}Generar Paz y Salvo{% endblock %}

{% block main %}
    {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
    <div class="row">
        <div class="col-xs-12">
            <div class="form-group">
                {{ form_label(form.codigo, null, {'label_attr' : {'class' : 'col-sm-2 control-label'}}) }}
                <div class="col-sm-10">
                    {{ form_widget(form.codigo, {'attr' : {'class' : 'form-control', 'autofocus' : 'autofocus'}}) }}
                    <span class="text-danger">{{ form_errors(form.codigo) }}</span>
                    {% if pazSalvo is defined %}
                        <span id="pazSalvo" class="hidden">{{ pazSalvo }}</span>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-offset-2 col-sm-10">
            {{ form_widget(form.consultar, {'attr' : {'class' : 'btn btn-primary'}, 'label' : '<span class="glyphicon glyphicon-search" aria-hidden="true"></span> Consultar'}) }}
            {{ form_widget(form.generar, {'attr' : {'class' : 'btn btn-primary hidden', 'formtarget': '_blank'}, 'label' : '<span class="glyphicon glyphicon-file" aria-hidden="true"></span> Generar'}) }}
        </div>
    </div>
    {{ form_end(form) }}
{% endblock %}

{% block body_javascript %}
    {{ include('@EasyAdmin/default/includes/_select2_widget.html.twig') }}
    <script type="text/javascript">
        $(function(){
            var pazSalvo = $('#pazSalvo');
            if (pazSalvo.length) {
                if (pazSalvo.html() === 'si') {
                    pazSalvo.html('<ul>' +
                        '<li>Se encuentra a paz y salvo. Puede generar el PDF.</li>' +
                        '<li><b>El paz y salvo sin firma no es válido.</b></li>' +
                        '</ul>').removeClass('hidden').addClass('text-info');
                    $('#form_generar').removeClass('hidden');
                } else if (pazSalvo.html() === 'no') {
                    pazSalvo.html('<ul><li>No se encuentra a paz y salvo. No puede generar el PDF.</li></ul>').removeClass('hidden').addClass('text-danger');
                } else if (pazSalvo.html() === 'no_registrado') {
                    pazSalvo.html('<ul><li>No está registrado. Acerquese a los laboratorios para crear su usuario.</li></ul>').removeClass('hidden').addClass('text-danger');
                }
            }
        })
    </script>
{% endblock %}

