{% extends 'easy_admin/layout.html.twig' %}

{% form_theme form 'form/fields.html.twig' %}

{% block page_title %}Editar Inicio{% endblock %}
{% block content_title %}Editar Inicio{% endblock %}

{% block main %}
    {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
    <div class="row">
        <div class="col-xs-12">
            <div class="form-group">
                {{ form_label(form.contenido, null, {'label_attr' : {'class' : 'col-sm-2 control-label'}}) }}
                <div class="col-sm-10">
                    {{ form_widget(form.contenido, {'attr' : {'class' : 'form-control', 'autofocus' : 'autofocus'}}) }}
                    <span class="text-danger">{{ form_errors(form.contenido) }}</span>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-offset-2 col-sm-10">
            {{ form_widget(form.guardar, {'attr' : {'class' : 'btn btn-primary'}, 'label' : '<span class="fa fa-floppy-o" aria-hidden="true"></span> Guardar'}) }}
            {{ form_widget(form.restablecer, {'attr' : {'class' : 'btn btn-warning'}, 'label' : '<span class="fa fa-repeat" aria-hidden="true"></span> Restablecer'}) }}
        </div>
    </div>
    {{ form_end(form) }}
{% endblock %}
